import Head from "next/head";
import AccessoriesPage from "../src/components/pages/accessoriesPage/AccessoriesPage";
import CoffeeService from "../src/services/CoffeeService";

const { getAccessoryCategories, getAccessoryProducts } = new CoffeeService();

const Vertuo = ({ preloadedCategories }) => {
  return (
    <>
      <Head>
        <meta charSet="utf-8" />
        <meta
          name="description"
          content="Закажите кофе Nespresso с легкостью и насладитесь подлинным опытом благодаря большому выбору кофе. Дешёвая и быстрая доставка."
        />
        <title>Главная страница | Аксессуары</title>
      </Head>
      <AccessoriesPage preloadedCategories={preloadedCategories} />
    </>
  );
};

export async function getStaticProps() {
  // Call an external API endpoint to get posts.
  // You can use any data fetching library
  const categories = await getAccessoryCategories();
  const categoriesWithProducts = await Promise.all(
    categories.map(async (category) => {
      const products = await getAccessoryProducts(category.id);

      return { ...category, products };
    })
  );

  // By returning { props: { posts } }, the Blog component
  // will receive `posts` as a prop at build time
  return {
    props: {
      preloadedCategories: categoriesWithProducts,
    },
    revalidate: 10,
  };
}

export default Vertuo;
